<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- template for our snippet -->
    <template id="appaeul_explore_hotels" name="Explore Hotels - Dynamic">
        <section class="explore-hotels">
            <div class="container">
                <div class="text-center py-5">
                    <h2 class="h1">Explore MY Hotels</h2>
                    <p>Lorem ipsum is placeholder text commonly used in the graphic, print, and publishing industries for <br/>previewing layouts and visual mockups.</p>
                </div>

                <!-- element to store list of cities using JS -->
                <div class="row justify-content-center" id="ap-hotels-row"/>
            </div>
        </section>
    </template>

    <!-- To be used in JS for snippet options -->
    <template id="explore_hotels_options" inherit_id="website.snippet_options">
        <xpath expr="//div[@data-js='Box']" position="before">
            <div data-js="ExploreHotelsOptions" data-selector=".explore-hotels" data-drop-in=".o_mega_menu nav">
            </div>
        </xpath>
    </template>
</odoo>